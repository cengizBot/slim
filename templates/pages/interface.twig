{% extends './header.twig' %}


    {% block body %}

    <div class="row" style="margin-right:0px">

        <div class="col-lg-3 col-md-3">
          
            <ul id="list_interface_menu" style="padding-left:0px">
                <li class="menu_interface" id="rh_icone">
                    <div class="div_interface_menu" id="menu_rh">
                    <img id="rh_icone_img" src="/public/img/rhHumainBlack.png">
                        Ressources humaines
                    </div>

                </li>
                <li class="line_li">
                 <div class="line"></div>
                </li>
              

                <li class="menu_interface" id="inventaire_icone" id="menu_inventaire">
                   <div class="div_interface_menu">
                    <img id="inventaire_icone_img" src="/public/img/rhHumainBlack.png">
                        Inventaire
                    </div>
                </li>

                <li class="menu_interface">
                    <div class="menu_interface">
                    
                    </div>
                </li>
            </ul>


        </div>

        <div class="col-lg-8 col-md-7">
           <h3>Bienvenue dans l'interface</h3>   <br/>

        {% if data %}
        <div id="interface_submit_client_inscription">

                    {% for value in data['data'].error %}

                           {% if value.success %}
                               {# if success form msg #}
                               <div class="alert alert-success" role="alert" style="font-size:15px">
                                 <li class='success_form' >{{ value.success|capitalize }} : {{ value.msg|capitalize }} </li>
                                </div>
                               
                           {% else %}
                                {# if error form msg #}
                                  <div class="alert alert-danger" role="alert" style="font-size:15px">
                                     <li class='error_input' >{{ value.input|capitalize }} : {{ value.error|capitalize }} </li>
                                   </div>

                           {% endif %}
                         

                    {% endfor %}
            </div>
            <br/>     
        {% endif %}
 
            <div id="header_interface">
            </div>
            <div id="interface_div_display" style="margin-top:20px">
              



            </div>
            <div id="pagination">

            </div>

        </div>

    </div>

       
        <div class="modal fade" id="modal_employee" tabindex="-1" role="dialog" aria-labelledby="modal_employee" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Formulaire D'ajout</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                <form method="post" action="/addEmployee" id="add_employee_form"> 
                    <input type="hidden" id="csrf_input" name="{{ data['data'].csrf }}" value="{{ data['data'].getCsrf }}"/>
                        <div class="form-group"><label>Nom</label>
                            <input type="text" class="form-control" id="name_input" name="name" placeholder="Entrer un nom">
                            <small id="check_name_input" class="form-text red"></small>
                        </div>

                        <div class="form-group"><label>Prénom</label>
                        <input type="text" class="form-control" id="firstname_input" name="firstname" placeholder="Entrer un prénom">
                        <small id="check_firstname_input" class="form-text red"></small> 
                        </div>
                        
                        <div class="form-group"> <label>Email address</label>
                        <input type="email" class="form-control" id="email_input" name="email" placeholder="Entrer un email">
                        <small id="check_email_input" class="form-text red"></small> 
                        </div> 

                        <div class="form-group"> <label>Ville</label> 
                        <input type="string" class="form-control" id="ville_input" name="ville" placeholder="Entrer une ville"> 
                        <small id="check_ville_input" class="form-text red"></small>
                        </div>    

                        <div class="form-group"> <label>Fonction</label> 
                        <input type="text" class="form-control" id="fonction_input" name="fonction" placeholder="Entrer une fonction">  
                        <small id="check_fonction_input" class="form-text red"></small> 
                        </div> 
                        
                        <div class="form-group"> <label>Age</label> 
                        <input type="string" class="form-control" id="years_input" name="years" placeholder="Entrer un âge"> 
                        <small id="check_years_input" class="form-text red"></small>
                        </div>            


                        <div class="form-group"> <label>Date d'entrée</label> 
                        <input class="form-control" type="date" name="enter_date" id="enter_date">
                        <small id="check_enter_date_input" class="form-text red"></small>
                        </div>     




            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                <button type="submit" class="btn btn-primary">Création</button>
            </div>
           </form>
            </div>
        </div>
        </div>
            
        {# remove margin left padding left #}
        <script src="/public/js/rmv_marginDiv.js"></script>
        {# style effect menu interface #}
        <script src="/public/js/menu_interface/menu_interface.js"></script>
        {# api #}
        <script src="/public/js/api/RhHumaines.js"></script>
        {# api add employee #}
        <script src="/public/js/api/addEmployeeForm.js"></script>
   

    
    {% endblock %}

